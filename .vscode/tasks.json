{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "./install.sh",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "generate system markdown",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "${workspaceFolder}/controlrox/services/design/render_controls_design_checklist.py",
                "--input",
                "docs/controls/design/CONTROLS_DESIGN_CHECKLIST.filled.example.yaml",
                "--output",
                "docs/controls/design/CONTROLS_DESIGN_CHECKLIST.filled.example.md"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "convert to report html",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "${workspaceFolder}/controlrox/services/design/convert_markdown_to_html.py",
                "--input",
                "docs/controls/design/CONTROLS_DESIGN_CHECKLIST.filled.example.md",
                "--output",
                "docs/controls/design/CONTROLS_DESIGN_CHECKLIST.filled.example.html"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}